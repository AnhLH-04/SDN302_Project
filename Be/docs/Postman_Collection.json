{
    "info": {
        "name": "EV & Battery Trading Platform",
        "description": "API Collection cho hệ thống giao dịch xe điện và pin",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"phone\": \"0999999999\",\n  \"password\": \"123456\",\n  \"address\": \"Hà Nội\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\"token\", jsonData.data.token);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@evplatform.com\",\n  \"password\": \"Admin@123456\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Me",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/auth/me",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "me"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Vehicles",
            "item": [
                {
                    "name": "Get All Vehicles",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/api/vehicles?page=1&limit=10",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "vehicles"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "10"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Vehicle By ID",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/api/vehicles/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "vehicles",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": ""
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Create Vehicle",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Tesla Model S 2023\",\n  \"brand\": \"Tesla\",\n  \"model\": \"Model S\",\n  \"year\": 2023,\n  \"condition\": \"new\",\n  \"mileage\": 0,\n  \"price\": 2500000000,\n  \"batteryCapacity\": 100,\n  \"batteryHealth\": 100,\n  \"range\": 650,\n  \"color\": \"Đỏ\",\n  \"description\": \"Tesla Model S hoàn toàn mới\",\n  \"features\": [\"Autopilot\", \"Premium Interior\"],\n  \"location\": \"Hà Nội\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/vehicles",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "vehicles"
                            ]
                        }
                    }
                },
                {
                    "name": "Get My Vehicles",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/vehicles/my/vehicles",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "vehicles",
                                "my",
                                "vehicles"
                            ]
                        }
                    }
                }
            ]
        },
